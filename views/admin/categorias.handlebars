<h2> Lista de Categorias: </h2>
<hr><br>
<a href='/admin/categorias/add'><button class="btn btn-success ">Nova Categoria </button> </a>


{{#each categorias}}
  <div class="card ">

    <div class="card-body">
      <h4> {{nome}} </h4>
      <h5> Slug: {{slug}} <h5>
          <a href='/admin/categorias/edit/{{_id}}'><button class="btn btn-success "> Editar categoria </button></a>
          <form action='/admin/categorias/deletar' method='POST'>
            <input type="hidden" name='id' value='{{_id}}'>
            <button type="submit" class='btn btn-danger mt-2'> Deletar Categoria </button>
          </form>
        </div>
  </div>
{{else}}
  <h4 class='mt-3'> Nenhuma categoria registrada </h4>
{{/each}}
